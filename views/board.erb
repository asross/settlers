<style type="text/css">
  .tile {
    position: relative;
    width: 56px;
    height: 100px;
    margin-left: 2em;
  }
  .tile.water {
    background-color: cornflowerblue;
  }
  .tile.wheat {
    background-color: wheat;
  }
  .tile.sheep {
    background-color: yellowgreen;
  }
  .tile.wood {
    background-color: forestgreen;
  }
  .tile.ore {
    background-color: darkgray;
  }
  .tile.brick {
    background-color: coral;
  }
  .tile.desert {
    background-color: black;
  }
  .tile.first {
    -webkit-transform: rotateZ(60deg);
  }
  .tile.second {
    -webkit-transform: rotateZ(-60deg);
    top: -100px;
  }
  .tile.third {
    top: -200px;
  }
  .number {
    width: 110px;
    height: 100px;
    line-height: 100px;
    font-size: 2em;
    position: relative;
    text-align: center;
    vertical-align: middle;
    top: -300px;
    color: white;
    left: 0px;
    background-color: transparent;
  }
  .hex {
    height: 100px;
  }

  <% @board.hexes.each do |hex| %>
    <%= "#h#{hex.x}-#{hex.y}" %> {
      position: absolute;
      top: <%= "#{100*hex.y+50*hex.x-50*((@board.size-1)/2)}px" %>;
      left: <%= "#{86.6*hex.x}px" %>;
    }
  <% end %>
</style>

<% @board.hexes.each do |hex| %>
  <% next if hex.x + hex.y < (@board.size - 1) / 2 %>
  <% next if hex.x + hex.y > 3*((@board.size - 1) / 2) %>

  <%= erb :hex, layout: false, locals: { hex: hex } %>

<% end %>
